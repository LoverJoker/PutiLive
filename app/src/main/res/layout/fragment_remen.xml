<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="32dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="12dp"
                    android:src="@drawable/clickbig_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
                <TextView
                    android:text="大图"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="12dp"
                    android:src="@drawable/small_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
                <TextView
                    android:text="小图"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp">
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                android:text="直播通知："
                android:textSize="16sp"
                android:textColor="#dc403a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingRight="16dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_gravity="center"
                android:text="参延法师将于2017年2月1日直播"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="16dp"
                android:layout_gravity="center"
                android:text="更多"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/Recycle_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="226dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp">
                <TextView
                    android:text="星云大师"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_toLeftOf="@+id/remen_didian_textView"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/dingwei_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
                <TextView
                    android:id="@+id/remen_didian_textView"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    android:text="江苏 无锡"
                    android:textColor="#7271cC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textColor="#999999"
                    android:text="99999在看"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/shipin_img"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/btn_img"
                    android:layout_width="60dp"
                    android:layout_height="22dp" />
                <TextView
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_alignParentBottom="true"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="《佛为娑伽罗龙王所说大乘法》第三课"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>


